package modules{	import flash.display.Bitmap;	import flash.display.Loader;	import flash.display.Sprite;	import flash.events.Event;	import flash.net.URLRequest;		public class RelatedMC extends Sprite	{				private var relatedFilm:RecMC = new RecMC();				private var _fid:Number;		private var _hd:uint = 1;				private var loader:Loader = new Loader();				public function RelatedMC()		{			super();			init();		}		private function init():void{						this.addChild(relatedFilm);			this.width = relatedFilm.width;			this.height = relatedFilm.height;					}		public function showInfo(oo:Object):void{						relatedFilm.desTxt.text = "";			relatedFilm.movieName.text = oo.title.substr(0,3)+"...";			relatedFilm.desTxt.text = oo.desc;			this.hd = 1;						loader.contentLoaderInfo.addEventListener(Event.COMPLETE, imgerLoaded);			loader.load(new URLRequest(oo.pic));					}		private function imgerLoaded(event:Event):void{						loader.contentLoaderInfo.removeEventListener(Event.COMPLETE, imgerLoaded);			var bitmap:Bitmap = event.target.content as Bitmap;			bitmap.width = 74;			bitmap.height = 101;			relatedFilm.movieCover.addChild(bitmap);					}		public function set fid(value:Number):void{						_fid = value;					}		public function get fid():Number{						return _fid;					}		public function set hd(value:uint):void{						_hd = value;					}		public function get hd():uint{						return _hd;					}	}}